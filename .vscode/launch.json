{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Android",
			"type": "reactnative",
			"request": "launch",
			"platform": "android",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
			"enableDebug": true
		},
		{
			"name": "Debug iOS",
			"type": "reactnative",
			"request": "launch",
			"platform": "ios",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
			"enableDebug": true
		},
		{
			"name": "Attach Metro",
			"type": "reactnative",
			"request": "attach",
			"cwd": "${workspaceFolder}"
		}
	]
}
